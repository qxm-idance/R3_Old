<button id="modalBoxTrigger-6" class="button button--small button--action">Click to open</button>

<div data-modal-box-trigger="modalBoxTrigger-6" data-component="modal-box" data-extensions="Shop::seamless-basket/offer/dialogs/delete-basket-confirmation" data-overlay-close="true" class="modal-box--with-action-buttons modal-box--size-xsmall gradient-line">
	<div class="modal-box__container text--center">
		<div class="modal-box__icon-box modal-box__icon-box--blue modal-box__icon-box--small trailer">
			<span class="icon icon-basket-empty"></span>

			<div class="modal-box__icon-box modal-box__icon-box--yellow modal-box__icon-box--info">
				<span class="icon icon-error-no-bg"></span>
			</div>
		</div>
		<p class="text-size--30 text-light trailer">Mixed basket</p>
		<p class="text-size--16 trailer--large">Some description text here</p>

		<button class="button button--action full-width trailer" data-component="button" data-alias="cancel">
			<span class="button-text">Private checkout</span>
		</button>
		<button class="button button--action full-width">
			<span class="button-text">Business checkout</span>
		</button>
	</div>
</div>
