/*Checkboxes filter by Emilie*/
.form-checkbox--filter label {
    box-shadow: inset 0 0 0 1px #d1d1d1;
    border:none !important;
    background: #f5f5f5;
    color: #474747;
    padding:1px 1em;
    line-height: 1.875rem;

}
.form-checkbox--filter input[type=checkbox]:checked+label{
    border:none !important;
    background: #038cd6;
    color: #fff;
    box-shadow: inset 0 0 0 1px #0278b8;
}
.form-checkbox--filter label .filter-count{
    font-size: 0.688rem;
    color: #757575;
}